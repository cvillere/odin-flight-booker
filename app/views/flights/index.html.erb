<%= form_with model: @airport do |form| %>
  flights:
  <ul>
    <li>
      <%= form.select :departure_airport_id, Airport.order(:airport_code).map { |airport| [airport.airport_code] } %>
    </li>
    <li>
      <%= form.select :arrival_airport_id, Airport.order(:airport_code).map { |airport| [airport.airport_code] } %>
    </li>
    <li>
      <%= select_tag "flight_date", options_for_select(Flight.start_formatted) %>
    </li>
    <li>
      <%= form.submit "Search Flights" %>
    </li>

  </ul>
<% end %>